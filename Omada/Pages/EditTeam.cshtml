@page "{teamId:int?}"
@model Omada.Pages.EditTeamModel
@{
    ViewData["Title"] = "EditTeam";
}

<h1>@Model.Team.Name</h1>
<form method="post" action="">
    <input type="hidden" asp-for="Team.Id" />
    <div class="form-group">
        <label asp-for="Team.Name"></label>
        <input asp-for="Team.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Team.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Team.IsPublic">Is Team Public?</label>
        <br /><input type="radio" asp-for="Team.IsPublic" value="true" />Yes
        <br /><input type="radio" asp-for="Team.IsPublic" value="false" />No
        <span class="text-danger" asp-validation-for="Team.IsPublic"></span>
    </div>
    <div>
        <div class="newMembers">
            <button type="button" class="btn btn-sm" onclick="buttonClicked('addUsers')">Add New Team Members?</button>
            <div id="addUsers" class="form-group" style="display: none;">
                @for (int i = 0; i < Model.TeamUsersList.Count(); i++)
                {
                    <div class="form-check">
                        <input type="checkbox" asp-for="@Model.TeamUsersList[i].IsSelected" />
                        <label asp-for="@Model.TeamUsersList[i].IsSelected">@Model.TeamUsersList[i].User.UserName</label>
                        <input type="hidden" asp-for="@Model.TeamUsersList[i].User.Id" />
                    </div>
                }
            </div>
        </div>

        <div class="modifyMembers">
            <button type="button" class="btn btn-sm" onclick="buttonClicked('modifyUsers')">Modify Team Members?</button>
            <div id="modifyUsers" class="form-group" style="display: none">
                @for (int i = 0; i < Model.TeamUsersList.Count(); i++)
                {
                    <div class="form-check">
                        <input type="checkbox" asp-for="@Model.TeamUsersList[i].IsSelected" />
                        <label asp-for="@Model.TeamUsersList[i].IsSelected">@Model.TeamUsersList[i].User.UserName</label>
                        <input type="hidden" asp-for="@Model.TeamUsersList[i].User.Id" />
                    </div>
                }
            </div>
        </div>
    </div>
    <br/><button type="submit" class="btn btn-dark" name="submitButton">Save</button>
</form>

@section Scripts
{
<script>
    //var addUsers = document.getElementById("addUsers");
    //var modifyUsers = document.getElementById("modifyUsers");
    function buttonClicked(users) {
        var users = document.getElementById(users);
        if (users.style.display === "none") {
            users.style.display = "block";
        }
        else {
            users.style.display = "none";
        }
    };
</script>
}